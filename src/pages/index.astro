---
import BaseLayout from "../layouts/BaseLayout.astro";
import { content } from "../../data/home";
---

<BaseLayout title="Andreas Stratmann">
  <main
    class="min-h-screen flex flex-col items-start md:items-center text-left md:text-center pt-10 md:pt-32 p-6 relative border-t-6 border-zinc-700 w-full"
  >

    <!-- Greeting -->
    <p class="text-lg text-muted font-light max-w-md md:text-balance mb-10">
      {content.greeting.start}
      <span class="text-brand font-normal">{content.greeting.name}</span><br />
    </p>

    <!-- Intro if it exists -->
    {content.intro && (
        <p class="text-lg text-muted font-light max-w-md md:text-balance mb-10 md:mb-12">
          {content.intro}
        </p>
    )}

    <!-- Headline -->
    <h1
      class="font-serif font-medium text-3xl md:text-5xl leading-tight tracking-tight text-foreground/60 md:text-balance max-w-3xl mb-12 md:mb-16"
    >
      {content.headline}
    </h1>

    <!-- Studio & Notes Links -->
    <div
      class="flex flex-col sm:flex-row gap-6 sm:gap-12 text-left w-full md:w-auto"
    >
      <a
        href="/studio"
        class="group block max-w-xs w-full p-5 rounded-xl border border-zinc-200/20 bg-zinc-50/10 sm:w-auto sm:p-0 sm:border-0 sm:bg-transparent sm:max-w-xs"
      >
        <span
          class="block text-foreground font-medium text-lg mb-1 group-hover:text-brand transition-colors"
        >
          {content.studio.label}
        </span>
        <span
          class="block text-muted font-light leading-relaxed group-hover:text-foreground transition-colors"
        >
          {content.studio.description}
          <span class="italic font-semibold text-foreground/80"
            >{content.studio.highlight}</span
          >
        </span>
      </a>

      <a
        href="/notes"
        class="group block max-w-xs w-full p-5 rounded-xl border border-zinc-200/20 bg-zinc-50/10 sm:w-auto sm:p-0 sm:border-0 sm:bg-transparent sm:max-w-xs"
      >
        <span
          class="block text-foreground/80 font-medium text-lg mb-1 group-hover:text-brand transition-colors"
        >
          {content.notes.label}
        </span>
        <span
          class="block text-muted font-light leading-relaxed group-hover:text-foreground transition-colors"
        >
          {content.notes.description}
        </span>
      </a>
    </div>

  </main>
</BaseLayout>
