---
import BaseLayout from "../layouts/BaseLayout.astro";

// --- Content Configuration ---
const content = {
  greeting: {
    start: "Hi,",
    name: "Iâ€™m Andreas." 
  },
  intro: "Welcome to my attempt at making sense of things.",
  headline: "Explorations in software, systems, and ideas.",
  studio: {
    label: "Studio",
    description: "Building software systems to solve problems",
    highlight: "@Field Logic." 
  },
  notes: {
    label: "Notes",
    description: "Personal reflections on living and learning."
  },
  footer: "One person's effort"
};
---

<BaseLayout title="Andreas Stratmann">
  <main class="min-h-screen flex flex-col items-start md:items-center text-left md:text-center pt-10 md:pt-32 p-6 relative border-t-6 border-zinc-700 w-full">
      
      <p class="text-lg text-muted font-light max-w-md md:text-balance mb-2">
        {content.greeting.start} <span class="text-brand font-normal">{content.greeting.name}</span><br />
      </p>

      <p class="text-lg text-muted font-light max-w-md md:text-balance mb-10 md:mb-12">
        {content.intro}
      </p>

      <h1 class="font-serif font-medium text-3xl md:text-5xl leading-tight tracking-tight text-foreground/60 md:text-balance max-w-3xl mb-12 md:mb-16">
        {content.headline}
      </h1>

      <div class="flex flex-col sm:flex-row gap-10 md:gap-12 text-left w-full md:w-auto">
        
        <a href="/studio" class="group block max-w-xs">
          <span class="block text-foreground font-medium text-lg mb-1 group-hover:text-brand transition-colors">
            {content.studio.label}
          </span>
          <span class="block text-muted font-light leading-relaxed group-hover:text-foreground transition-colors">
            {content.studio.description} <span class="italic font-semibold text-foreground/80">{content.studio.highlight}</span>
          </span>
        </a>

        <a href="/notes" class="group block max-w-xs">
          <span class="block text-foreground/80 font-medium text-lg mb-1 group-hover:text-brand transition-colors">
            {content.notes.label}
          </span>
          <span class="block text-muted font-light leading-relaxed group-hover:text-foreground transition-colors">
            {content.notes.description}
          </span>
        </a>
      </div>

      <footer class="absolute bottom-12 text-subtle text-xs tracking-widest uppercase opacity-40">
        {content.footer} &copy; {new Date().getFullYear()}
      </footer>

  </main>
</BaseLayout>